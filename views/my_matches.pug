extends loggedInLayout

block content
    section(class='loginSection savedBooks')
        h1 Saved Books: #{books.length}
        ul 
            each book, i in books
                li
                    h3 Title: 
                        p #{book.title}
                    h3 Author:
                        p #{book.author}
                    h3 Genre:
                        p #{book.genre}