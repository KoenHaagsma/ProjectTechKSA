extends loggedOutLayout

//- Inlog + registration.
block content
    section(class='loginSection')
        -if (messages.exists)
            .message.exists
                span=messages.exists
        form(action="/loginUser" method="POST" class="registerLogin")
            h3 Login
            label(for='email') E-mail
            input#email(type='email' name='email' placeholder='example@email.com' required='')

            label(for='password') Password (Minimum of 8 characters)
            input#password(type='password' name='password' minlength="8")
            button(type="submit") Login

            button(type="submit") 
                a(href="/register" class="alink") Don't have an account yet? Register!

            